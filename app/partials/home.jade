    script.
      $.get( "https://g0v-jothon.kktix.cc/events.atom?locale=zh-TW", function( data ) {
        var all_events = $(data).find('published');
        var this_e = $(all_events[0]).text();

        var all_links = $(data).find('link');
        var this_link = $(all_links[2]).attr('href');

        $('#kktixbtn').attr('href', this_link);

        var dat = new Date();
        var o_date = new Date(this_e);

        $('#kktixbtn .zh').text('報名 ' + event_formatDate(o_date) + ' 黑客松 (' + formatDate(o_date.addDays(12)) + ' 正午開放)');

      });

        Date.prototype.addDays = function(days, init) {
            var dat = new Date(this.valueOf());
            dat.setDate(dat.getDate(init) - days);
            return dat;
        }

      function formatDate(date) {
        var m = date.getMonth()+1;
        return date.getFullYear() + "/" + m + "/" + date.getDate();
      }

      function event_formatDate(date) {
        var m = date.getMonth()+1;
        return m + "/" + date.getDate();
      }
